<p id="notice"><%= notice %></p>

<h1>Listing Groups</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Group category</th>
      <th>Name</th>
      <th>Description</th>
      <th>Logo</th>
      <th>Banner</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.group_category.name %></td>
        <td><%= group.name %></td>
        <td><%= group.description %></td>
        <td> <img src=<%= group.logo.present? ? group.logo : "http://placehold.it/20x15" %> alt="Card image cap" width="100%" height="auto">
        </td>
        <td><%= cl_image_tag group.banner, width:'100px' %></td>
        <td><%= group.owner_id %></td>
        <td><%= link_to 'Show', group %></td>
        <td><%= link_to 'Edit', edit_group_path(group) %></td>
        <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

