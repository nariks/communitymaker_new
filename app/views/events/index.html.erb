<p id="notice"><%= notice %></p>

<h1>Listing Events

  <% if params[:tag] %>
    tagged with <%= params[:tag] %>
  <% end %>
</h1>

<% @tags.each do |tag| %>
    <%= link_to tag, events_path(tag: tag.name), class: 'btn btn-warning' %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Description</th>
      <th>Date</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Street</th>
      <th>Suburb</th>
      <th>State</th>
      <th>Postcode</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.user.id %></td>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <td><%= event.start_time.strftime("%I:%M%p") %></td>
        <td><%= event.end_time.strftime("%I:%M%p") %></td>
        <td><%= event.street %></td>
        <td><%= event.suburb %></td>
        <td><%= event.state %></td>
        <td><%= event.postcode %></td>
        <td><%= event.country %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
