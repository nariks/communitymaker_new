<%= simple_form_for(@enquiry) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: 'Your name', placeholder: 'eg. John Smith' %>
    <%= f.input :email, placeholder: 'Enter your email' %>
    <%= f.input :enquiry_type, collection: ['General enquiry', 'Complaint', 'Positive feedback'] %>
    <%= f.input :message %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
