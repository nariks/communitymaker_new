<p id="notice"><%= notice %></p>

<h1>Listing Messages</h1>

<table class="table">
  <thead>
    <tr>
      <th>Sender</th>
      
      <th>Subject</th>
      
      <th>Read</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.reverse.each do |message| %>
       <tr class= "<%= 'unread' unless message.read %>" >     
    
        <% if message.receiver_id == current_user.id %>
            <td><%= User.find(message.sender_id).profile.full_name %></td>
          
          <td><%= link_to message.subject, message %></td>
          
          <td><%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, message, method: :delete, data: { confirm: 'Are you sure?' } %> </td>
           <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


